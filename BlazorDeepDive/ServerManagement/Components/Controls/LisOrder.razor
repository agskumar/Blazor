@using ServerManagement.Models
@using Microsoft.FluentUI.AspNetCore.Components

<div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem; padding: 1rem 0;">
    <div>
        <label style="display: block; font-weight: 500; margin-bottom: 0.5rem;">Source:</label>
        <FluentTextField @bind-Value="Model.Source" Placeholder="e.g. LIS System" Style="width: 100%;" />
    </div>

    <div>
        <label style="display: block; font-weight: 500; margin-bottom: 0.5rem;">Sample ID:</label>
        <FluentSelect TOption="string" @bind-Value="Model.SampleId" Style="width: 100%;">
            <FluentOption Value="">-- Select --</FluentOption>
            <FluentOption Value="SIDCT1-{Param}">SIDCT1-{Param}</FluentOption>
            <FluentOption Value="SIDCT2-{Param}">SIDCT2-{Param}</FluentOption>
        </FluentSelect>
    </div>

    <div style="grid-column: 1 / -1;">
        <label style="display: block; font-weight: 500; margin-bottom: 0.5rem;">Test:</label>
        <FluentSelect TOption="string" @bind-Value="Model.Test" Style="width: 100%;">
            <FluentOption Value="">-- Select --</FluentOption>
            <FluentOption Value="{Param}, LIH">{Param}, LIH</FluentOption>
            <FluentOption Value="{Param}, XYZ">{Param}, XYZ</FluentOption>
        </FluentSelect>
    </div>
</div>

@code {
    [Parameter]
    public LisOrderActionModel Model { get; set; } = default!;
}
