@page "/servers"

<h3>Servers</h3>
<br/>
<br />

<div class="container text-center">
    <div class="row w-50">
        @foreach (var city in cities)
        {
            <div class="card" style="width: 8rem;">
                <div class="ratio ratio-4x3">
                    <img src="@($"/Images/{city.Name}.png")" class="card-img-top" alt="...">
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-primary">@city.Name</button>
                </div>
            </div>
        }
    </div>

</div>

<br />
<br />
    
<ul>
    @foreach(var server in servers)
    {
        <li>
            @server.Name in @server.City is 
            <span style="color:@(server.IsOnline?"green":"red")">
                @(server.IsOnline ? "online" : "offline")
            </span>
            &nbsp
            <a href="/servers/edit" class="btn btn-link">Edit</a>
        </li>
    }
</ul>

@code {
    private List<Server> servers = ServersRepository.GetServersByCity("Toronto");
    private List<City> cities = CitiesRepository.GetCities();
}
